<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_rings"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/editMaxDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textMaxDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editMaxDepth"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/editMaxDepth"
        android:layout_toLeftOf="@+id/editMaxDepth"
        android:text="@string/max_depth" />

    <EditText
        android:id="@+id/editMaxExtDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editMaxDepth"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textMaxExtDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editMaxExtDepth"
        android:layout_alignLeft="@+id/textMaxDepth"
        android:layout_alignTop="@+id/editMaxExtDepth"
        android:layout_toLeftOf="@+id/editMaxExtDepth"
        android:text="@string/max_ext_depth" />

</RelativeLayout>